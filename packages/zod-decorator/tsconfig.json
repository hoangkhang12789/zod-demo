{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "module": "CommonJS",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*",
  ]
}
